<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".FragmentC">

    <TextView
        android:id="@+id/HeaderFa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Enjoy the plane Service"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/waiting"
        android:id="@+id/ivimage"
        android:layout_below="@id/HeaderFa"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/ivimage"
        android:id="@+id/bottomfa"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Enjoying the flight in your Acamedy is the best way to fell the weather " />

</RelativeLayout>