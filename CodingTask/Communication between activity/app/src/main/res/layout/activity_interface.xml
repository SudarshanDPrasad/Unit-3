    android:id="@+id/flContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".viewModelActivity.ViewModelAct">

    <fragment
        android:name="com.application.communicationbetweenactivity.viewModelActivity.ViewModelFragmentA"
        android:layout_width="match_parent"
        android:id="@+id/fragA"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        android:name="com.application.communicationbetweenactivity.viewModelActivity.ViewModelFragmentB"
        android:layout_width="match_parent"
        android:id="@+id/fragB"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>