<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newsInside"
            type="com.application.newsapi.response.Article" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Iv_onclickImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/TV_InsideDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="24dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textColor="#bababa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/TV_InsideDescription"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="CNN"
            android:textColor="#bababa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_InsidePublishData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/TV_InsideDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/TV_InsideTittle"
            android:layout_above="@id/Dummy"
            android:layout_marginBottom="64dp"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="29sp"
            android:textColor="@color/white"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="42dp"
            android:layout_margin="20sp"
            android:id="@+id/btnback"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_height="42dp" />

    </RelativeLayout>

</layout>